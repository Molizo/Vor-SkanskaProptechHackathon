@page
@model SPHackathon.Pages.Containers.CreateModel

@{
    ViewData["Title"] = "Add Container";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Container Add</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item active">Container Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Container.ContainerName">Container Name</label>
                            <input asp-for="Container.ContainerName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Container.Description">Container Description</label>
                            <textarea asp-for="Container.Description" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Container.ProjectLead">Project Leader</label>
                            <input asp-for="Container.ProjectLead" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Container.LeadReviewer">Head Reviewer</label>
                            <input asp-for="Container.LeadReviewer" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Container.ApprovedUsers">Collaborators</label>
                            <input asp-for="Container.ApprovedUsers" class="form-control">
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Create new Porject" class="btn btn-success float-right">
            </div>
        </div>
    </form>
</section>
